              .content-row
                .row-title
                  span.text-required 必須
                  span.is-required 名（漢字）
                .row-fill
                  .wrap-input
                    input.input-text(type='text' name='lastName' value='' required)
            .row-form.is-flex.short-input
              .content-row
                .row-title
                  span.text-required 必須
                  span.is-required 姓（フリガナ）
                .row-fill
                  .wrap-input
                    input.input-text(type='text' name='firstName' value='' required)
              .content-row
                .row-title
                  span.text-required 必須
                  span.is-required 名（フリガナ）
                .row-fill
                  .wrap-input
                    input.input-text(type='text' name='lastName' value='' required)
            .row-form
              .content-row
                .row-title
                  span.text-required 必須
                  span.is-required 貴社名（漢字）
